<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/valueInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Value"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20dp"/>

    <Button
        android:id="@+id/addBeginningButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_at_beginning"
        android:layout_below="@id/valueInput"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"/>

    <Button
        android:id="@+id/addMiddleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_at_middle"
        android:layout_below="@id/addBeginningButton"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"/>

    <Button
        android:id="@+id/addEndButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_at_end"
        android:layout_below="@id/addMiddleButton"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"/>

    <Button
        android:id="@+id/clearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:layout_below="@id/addEndButton"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/linkedListTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_below="@id/clearButton"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"/>

</RelativeLayout>
